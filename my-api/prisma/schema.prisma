generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url = env("DATABASE_URL")
}

enum Role {
  USER
  ADMIN
}

model User {
  id Int @id @default(autoincrement())
  firstname String
  lastname String
  email String @unique
  password String
  role Role
  isActive Boolean

  @@map("user")
}

model Car {
  id Int @id @default(autoincrement())
  category String
  brand String
  model String
  year Int
  price Decimal @db.Decimal(10, 2)
  fueltype String

  @@map("cars")
}